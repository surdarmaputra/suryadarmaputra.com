---
import Button from "./button.astro";

interface Props {
  title: string;
  description?: string;
  date?: string;
  link?: string;
  linkText?: string;
}

const { title, description, date, link, linkText = "Read More â†’" } = Astro.props;
---

<article class="card border border-base-300">
  <div class="card-body">
    {date && <time class="text-sm text-base-content/50 mb-2">{date}</time>}
    <h3 class="card-title font-serif text-xl mb-3">{title}</h3>
    {description && <p class="text-base-content/80 mb-4 line-clamp-3">{description}</p>}
    <slot />
    {link && (
      <div class="card-actions">
        <a href={link} class="link no-underline" aria-label={`${linkText} - ${title}`}>
          {linkText}
        </a>
      </div>
    )}
  </div>
</article>

