---
import { Icon as AstroIcon } from "astro-icon/components";

interface Props {
  name: string;
  size?: string;
  class?: string;
  ariaLabel?: string;
  ariaHidden?: boolean;
}

const { name, size = "w-6 h-6", class: className = "", ariaLabel, ariaHidden = true } = Astro.props;

// Combine size classes with custom classes, add inline-block and flex-shrink for proper sizing
const combinedClass = `${size} flex-shrink-0 ${className}`.trim();
---

<AstroIcon
  name={name}
  class={combinedClass}
  aria-label={ariaLabel}
  aria-hidden={ariaHidden}
/>

