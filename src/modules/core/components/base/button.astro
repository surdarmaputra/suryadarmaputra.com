---
type ButtonVariant =
  | "primary"
  | "secondary"
  | "accent"
  | "neutral"
  | "ghost"
  | "link"
  | "outline"
  | "dash"
  | "soft";
type ButtonSize = "xs" | "sm" | "md" | "lg" | "xl";

interface Props {
  variant?: ButtonVariant;
  size?: ButtonSize;
  href?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  class?: string;
}

const {
  variant = "primary",
  size = "md",
  href,
  type = "button",
  disabled = false,
  class: className = "",
} = Astro.props;

// Use full class names so Tailwind/DaisyUI JIT compiler can detect them
const variantClassMap: Record<ButtonVariant, string> = {
  primary: "btn-primary",
  secondary: "btn-secondary",
  accent: "btn-accent",
  neutral: "btn-neutral",
  ghost: "btn-ghost",
  link: "btn-link",
  outline: "btn-outline",
  dash: "btn-dash",
  soft: "btn-soft",
};

const sizeClassMap: Record<ButtonSize, string> = {
  xs: "btn-xs",
  sm: "btn-sm",
  md: "",
  lg: "btn-lg",
  xl: "btn-xl",
};

const variantClass = variantClassMap[variant];
const sizeClass = sizeClassMap[size];
const classParts = ["btn", variantClass, sizeClass, className].filter(Boolean);
const classes = classParts.join(" ");
---

{href ? (
  <a href={href} class={classes} aria-disabled={disabled ? 'true' : undefined}>
    <slot />
  </a>
) : (
  <button type={type} class={classes} disabled={disabled}>
    <slot />
  </button>
)}

