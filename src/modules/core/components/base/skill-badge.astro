---
interface Props {
  skill: string;
  delay?: number;
  color?: string;
}

const { skill, delay = 0, color = "badge-outline" } = Astro.props;

let delayClass = "animation-delay-0";
if (delay === 0) delayClass = "animation-delay-0";
else if (delay === 100) delayClass = "animation-delay-150";
else if (delay === 200) delayClass = "animation-delay-300";
else if (delay === 300) delayClass = "animation-delay-450";
else if (delay === 400) delayClass = "animation-delay-600";
else if (delay === 500) delayClass = "animation-delay-750";
---

<span
  class={`badge badge-lg ${color} animate-fade-in-up ${delayClass}`}
>
  {skill}
</span>

