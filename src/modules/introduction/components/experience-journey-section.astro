---
import Ornament from "../../core/components/base/ornament.astro";
import SkillBadge from "../../core/components/base/skill-badge.astro";
import { generateRandomElementTiltAngle } from "../../core/utils/ui-utils";

const title = "From Websites to All Things Tech";
const subtitle = "Having extensive experience developing softwares across diverse technologies";
const skills = [
  "JavaScript",
  "TypeScript",
  "React",
  "Vue",
  "Astro",
  "Node.js",
  "Python",
  "AWS",
  "Docker",
  "Kubernetes",
  "GraphQL",
  "PostgreSQL",
];

// Generate random tilt angles and colors for badges
const badgeConfigs = skills.map((_, index) => {
  // Create slight random tilts (-8 to 8 degrees) that still feel balanced
  const tilt = generateRandomElementTiltAngle(index);

  // DaisyUI badge color variants
  const colors = [
    "badge-primary",
    "badge-secondary",
    "badge-info",
    "badge-success",
    "badge-warning",
    "badge-error",
  ];
  const color = colors[index % colors.length];

  return { skill: skills[index], tilt, color, delay: index * 100 };
});
---

<section id="experience" class="pt-16 pb-24 md:py-52 relative overflow-hidden" aria-labelledby="experience-heading">
  <Ornament variant="square" size="md" color="primary" position="top-left" />
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h2
        id="experience-heading"
        class="text-6xl md:text-7xl lg:text-8xl font-bold font-serif mb-6 text-accent-content animate-fade-in-up"
      >
        {title}
      </h2>
      <p class="text-xl md:text-3xl font-semibold text-accent-content/90 mb-4 animate-fade-in-up animate-delay-200">
        {subtitle}
      </p>
      
      <div class="mt-12 flex flex-wrap items-center justify-center gap-4">
        {badgeConfigs.map((config) => (
          <div
            class="inline-block badge-tilt transition-transform duration-300 hover:rotate-6 active:rotate-6"
            style={`--badge-tilt: ${config.tilt}deg;`}
          >
            <SkillBadge skill={config.skill} delay={config.delay} color={config.color} />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

