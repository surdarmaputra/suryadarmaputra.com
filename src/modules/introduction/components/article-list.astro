---
import Ornament from "../../core/components/base/ornament.astro";
import type { Article } from "../types";

interface Props {
  articles?: Article[];
  title?: string;
}

const mockArticles: Article[] = [
  {
    id: "1",
    title: "Getting Started with Astro",
    description: "Learn how to build fast, modern websites with Astro framework.",
    date: "2024-01-15",
    slug: "getting-started-with-astro",
    minsRead: 5,
  },
  {
    id: "2",
    title: "Understanding Module-Based Architecture",
    description: "A deep dive into organizing code with modular architecture patterns.",
    date: "2024-01-10",
    slug: "module-based-architecture",
    minsRead: 8,
  },
  {
    id: "3",
    title: "Building with DaisyUI",
    description: "Creating beautiful UIs with DaisyUI and Tailwind CSS.",
    date: "2024-01-05",
    slug: "building-with-daisyui",
    minsRead: 6,
  },
];

const { articles = mockArticles, title = "Articles" } = Astro.props;
---

<section class="py-24 md:py-52 relative overflow-hidden" aria-labelledby="articles-heading">
  <div class="container mx-auto px-6 relative z-10">
    <h2
      id="articles-heading"
      class="text-6xl md:text-7xl lg:text-8xl font-bold font-serif mb-20 text-center text-base-content animate-fade-in-up"
    >
      {title}
    </h2>
    <div class="flex flex-col gap-8 md:items-center">
      {articles.map((article, index) => {
        const articleDate = new Date(article.date);
        const formattedDate = articleDate.toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        });
        
        const delay = index * 100;
        let delayClass = "transition-delay-0";
        if (delay === 100) delayClass = "transition-delay-100";
        else if (delay === 200) delayClass = "transition-delay-200";
        else if (delay === 300) delayClass = "transition-delay-300";
        else if (delay === 400) delayClass = "transition-delay-400";
        else if (delay === 500) delayClass = "transition-delay-500";
        
        return (
          <div class={`scroll-reveal ${delayClass}`}>
            <article>
              <div class="flex items-center md:justify-center gap-4 text-sm md:text-base text-base-content/60 mb-0.5">
                <time datetime={article.date}>{formattedDate}</time>
                <span>{article.minsRead || 5} min read</span>
              </div>
              <h3 class="text-lg md:text-xl font-semibold leading-tight text-left md:text-center">
                <a
                  href={`/articles/${article.slug}`}
                  class="link link-hover no-underline hover:underline"
                >
                  {article.title}
                </a>
              </h3>
            </article>
          </div>
        );
      })}
    </div>
  </div>
</section>
