---

<section class="py-24 md:py-52 relative overflow-hidden" aria-labelledby="projects-heading">
  <Ornament variant="dots" size="md" color="primary" position="top-right" />
  
  <div class="container mx-auto px-4 relative z-10">
    <h2
      id="projects-heading"
      class="text-6xl md:text-7xl lg:text-8xl font-bold font-serif mb-20 text-center text-base-content animate-fade-in-up"
    >
      {title}
    </h2>
    
    <ProjectCarousel projects={projects} />
  </div>
</section>

